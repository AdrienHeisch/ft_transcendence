{
  "name": "ft-transcendence-www",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "run": "bun run build/index.js",
    "run:ws": "bun run src/websockets.ts",
    "ts:check": "tsc --noEmit",
    "sv:prepare": "svelte-kit sync || echo ''",
    "sv:check": "svelte-kit sync && svelte-check",
    "sv:check:watch": "svelte-kit sync && svelte-check --watch",
    "db:start": "docker compose up",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun -e \"import seed from './src/lib/server/db/seed'; await seed();\"",
    "db:setup": "bun -e \"import setup from './src/lib/server/db/setup'; await setup();\"",
    "storage:seed": "bun -e \"import seed from './src/lib/server/storage/seed'; await seed();\"",
    "biome": "biome check --write",
    "biome:check": "biome check",
    "biome:ci": "biome ci ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/bun": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "drizzle-seed": "^0.3.1",
    "postgres": "^3.4.7",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.17",
    "vite": "^7.3.0",
    "zod": "^4.3.5"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2"
  }
}
